pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                    args "-e GOCACHE=${env.WORKSPACE}/.cache"
                    args "-e GOPATH=${env.WORKSPACE}/go"
                }
            }
            steps {
                echo 'Hello World'
                dir('bugtracker-backend'){
                    sh "mkdir -p ${env.WORKSPACE}/.cache"
                    sh 'go test -v ./...'
                }
            }
        }
    }
}
